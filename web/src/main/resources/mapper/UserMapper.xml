<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xd.springbootdemo.mapper.UserMapper">
    <sql id="baseColumns">
        id,name,age,idNo
    </sql>
    <insert id="insert" parameterType="com.xd.springbootdemo.domain.User" useGeneratedKeys="true" keyProperty="id">
        insert into user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id!=null">
                id,
            </if>
            <if test="name!=null">
                name,
            </if>
            <if test="idNo!=null">
                idNo,
            </if>
            <if test="age!=null">
                age,
            </if>
        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">
            <if test="id!=null">
                #{id,jdbcType=BIGINT},
            </if>
            <if test="name!=null">
                #{name,jdbcType=VARCHAR},
            </if>
            <if test="idNo!=null">
                #{idNo,jdbcType=VARCHAR},
            </if>
            <if test="age!=null">
                #{age,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>
    <select id="selectById" parameterType="java.lang.Integer" resultType="com.xd.springbootdemo.domain.User">
        select <include refid="baseColumns"/> from user where id=#{id,jdbcType=BIGINT}
    </select>
    <select id="selectAllUser" resultType="com.xd.springbootdemo.domain.User">
        select <include refid="baseColumns"/> from user
    </select>
</mapper>